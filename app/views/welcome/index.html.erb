<p class="lead">
  Первый в мире удобный менеджер флеш-карточек. Именно так.
</p>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <% if flash[:notice] %>
      <div class="result-message alert-info alert"><%= flash[:notice] %></div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>

<% if @card %>
  <div class="card-layout">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 original-text-card">
        <%= @card.original_text %>
      </div>
      <div class="col-md-4"></div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 card-translation-layout">
        <%= form_tag review_path, html: {class: 'form' } do %>
          <%= hidden_field_tag :card_id, @card.id %>
          <div class="form-group">
            <%= label_tag :user_translation, 'Напишите перевод:' %><br>
            <%= text_field_tag :user_translation %><br>
          </div>
          <%= submit_tag 'Проверить', class: 'btn btn-info btn-sm' %>
        <% end %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
<% end %>
<p class="lead">
  Первый в мире удобный менеджер флеш-карточек. Именно так.
</p>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <% if flash[:notice] %>
      <div class="result-message alert-info alert"><%= flash[:notice] %></div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>

<% if @card %>
  <div class="card-layout">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 original-text-card">
        <%= @card.original_text %>
      </div>
      <div class="col-md-4"></div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 card-translation-layout">
        <%= form_for :review, url: review_path, html: {class: 'form' } do |f| %>
          <%= f.hidden_field :card_id, value: @card.id %>
          <div class="form-group">
            <%= f.label :user_translation, 'Напишите перевод:' %><br>
            <%= f.text_field :user_translation %><br>
          </div>
          <%= f.submit 'Проверить', class: 'btn btn-info btn-sm' %>
        <% end %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="result-message alert-info alert">Нет карточек</div>
    </div>
    <div class="col-md-3"></div>
  </div>
<% end %>